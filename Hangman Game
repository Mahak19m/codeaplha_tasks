import random

# Step 1: Word list
words = ["Cat", "Dog", "Elephant", "Fish", "Zebra"]

# Step 2: Pick a random word
word = random.choice(words)

# Step 3: Setup variables
guessed_word = ["_"] * len(word)
max_guesses = 6
wrong_guesses = 0
guessed_letters = []

# Step 4: Game loop
while wrong_guesses < max_guesses and "_" in guessed_word:
    print("\nWord: " + " ".join(guessed_word))
    print(f"Wrong guesses left: {max_guesses - wrong_guesses}")
    print("Guessed letters:", guessed_letters)
    
    guess = input("Guess a letter: ").lower()
    
    if guess in guessed_letters:
        print("You already guessed that letter!")
        continue
    
    guessed_letters.append(guess)
    
    if guess in word:
        for i in range(len(word)):
            if word[i] == guess:
                guessed_word[i] = guess
    else:
        wrong_guesses += 1
        print("Wrong guess!")

# Step 5: End result
if "_" not in guessed_word:
    print("\nðŸŽ‰ You won! The word was:", word)
else:
    print("\nðŸ˜¢ You lost! The word was:", word)
